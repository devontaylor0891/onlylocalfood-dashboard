extends layout

block content
	.row
		.panel.panel-default
			.panel-body
				.col-xs-5.col-sm-3
					img.img-responsive.productImage(src= producerLogo)
				.col-xs-7.col-sm-9
					.row.text-center
						h3= producerName
					.row.text-center
						h4.text-muted.padding-top-zero= producerLocation
						h4.text-muted.padding-top-zero= producerEmail
					.row
						p= producerDescription
	.row
		.col-md-10.col-md-offset-1
			.panel.panel-default
				.panel-heading
					h4.panel-title Upcoming Schedule
				.panel-body
					table.table.table-hover.table-responsive
						thead
							tr
								th Type
								th Date
								th City
								th Start Time
								th End Time
								th Details
						each schedule in producerSchedule
							tbody
								tr
									td= schedule.scheduleType
									td= schedule.scheduleDate
									td= schedule.scheduleLocation
									td= schedule.startTime
									td= schedule.endTime
									td= schedule.scheduleDescription
					a.btn.btn-primary(href="/producer/schedule/", role="button") See Full Schedule
	.row
		.col-sm-4.col-md-3.bg-grey
			h4.text-white Search Options
			.row.searchOptions.text-muted
				.well
					form
						.form-group
							label(for='location') Location
							input.form-control#location(type='text', name='location', placeholder='Moosomin')
						.form-group
							label(for='distance') Search Radius (km)
							.btn-group.btn-group-justified
								label.btn.btn-primary
									span 5
								label.btn.btn-primary
									span 25
								label.btn.btn-primary
									span 50
								label.btn.btn-primary
									span 100

			.row.searchOptions.text-muted
				.well
					form
						.form-group
							label(for='distance') Category
								.checkbox
									label
										input(type='checkbox', value='Door-to-door')
										span Door-to-door
								.checkbox
									label
										input(type='checkbox', value='Off-farm Pickup')
										span Off-farm Pickup
								.checkbox
									label
										input(type='checkbox', value='Scheduled Farmgate Pickup')
										span Scheduled Farmgate Pickup
		.col-sm-8.col-md-9
			.row
				each product in producerProducts
					.col-md-4.col-sm-6.col-xs-12
						.thumbnail
							a(href='/producer/product/')
									img.img-responsive.productImage(src='#{product.productImage}')
							.caption
								h5.productName= product.productName						
								p.price $#{product.productPrice}/#{product.productUnit}
								.btn-group.btn-group-justified
									a.btn.btn-primary(href="/producer/product/", role="button") Details
									a.btn.btn-primary(href="/cart", role="button") Add to Cart			