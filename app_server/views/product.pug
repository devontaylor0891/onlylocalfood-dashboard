extends layout


block content
	.row
		.panel.panel-default
			.panel-body
				.col-xs-5.col-sm-3
					img.img-responsive.productImage(src= productImage)
				.col-xs-7.col-sm-9
					.row.text-center
						h3= productName
							br/
							small $#{productPrice}/#{productUnit}
					.row.text-center
						a.btn.btn-primary(href="/cart", role="button") Add to Cart
					.row.text-center
						h4.text-muted.padding-top-zero= producerName
						h4.text-muted.padding-top-zero= producerLocation
					.row
						p= productDescription
	.row
		.col-md-10.col-md-offset-1
			.panel.panel-default
				.panel-heading
					h4.panel-title Upcoming Schedule
				.panel-body
					table.table.table-hover.table-responsive
						thead
							tr
								th Type
								th Date
								th City
								th Start Time
								th End Time
								th Details
						each schedule in schedules
							tbody
								tr
									td= schedule.schedulesType
									td= schedule.schedulesDate
									td= schedule.schedulesLocation
									td= schedule.startTime
									td= schedule.endTime
									td= schedule.schedulesDescription
							
					a.btn.btn-primary(href="/producer/schedule/", role="button") See Full Schedule